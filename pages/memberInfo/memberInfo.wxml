<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
<view class="avatar-box">
    <image class="avatar" src="{{avatar_url}}"></image>
</view>
<view class="container">
    <mp-form id="form" rules="{{rules}}" models="{{formData}}">
        <mp-cells>
            <mp-cell prop="name" title="姓名">
                <input bindinput="formInputChange" data-field="name" value="{{formData.name}}" class="weui-input {{isSelf?'':'un-editable-input'}}" disabled="{{!isSelf}}" placeholder="请输入姓名(必填)" />
            </mp-cell>
            <mp-cell prop="phone" title="手机号">
                <input bindinput="formInputChange" data-field="phone" value="{{formData.phone}}" class="weui-input {{isSelf?'':'un-editable-input'}}" disabled="{{!isSelf}}" placeholder="未完善手机号" />
            </mp-cell>
            <mp-cell prop="remark" title="备注">
                <input bindinput="formInputChange" data-field="remark" value="{{formData.remark}}" class="weui-input {{isSelf?'':'un-editable-input'}}" disabled="{{!isSelf}}" placeholder="未指定备注信息" />
            </mp-cell>
        </mp-cells>
    </mp-form>
    <view class="weui-btn-area" wx:if="{{isSelf}}">
        <button class="weui-btn" type="primary" bindtap="submitForm" loading="{{isPending}}" disabled="{{isPending}}" style="margin-top: 60rpx;">
            保存修改
        </button>
    </view>
</view>