.container {
  width: 92%;
  height: 100%;
  margin: 0 auto;
  padding-top: 0%;
}
.header {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.select {
  display: flex;
  flex-direction: row;
  color: RGBA(50, 50, 50, 1);
  font-size: 28rpx;
  font-weight: Medium;
  font-family: PingFang-SC-Medium;
}
.select image {
  width: 22rpx;
  height: 14rpx;
  margin-left: 12rpx;
  margin-top: 15rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate {
  transform:rotate(180deg); 
}
.option_box {
  position: absolute;
  top: 40rpx;
  width: 20%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding-left: 10rpx;
  padding-bottom: 10rpx;
}
.center {
  width: 100%;
}
.re_item {
  width: 100%;
  border-bottom: 2rpx #D4D4D4 solid;
}
.re_info  {
  width: 100%;
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  color: #323232;
  font-weight: Medium;
  font-family: PingFang SC;
}
.re_info>view {
  margin-top: 36rpx;

}
.re_info view image {
  width: 200rpx;
  height: 146rpx;
  margin-right: 14rpx;
}