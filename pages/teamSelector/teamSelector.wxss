@import "/assets/css/tbutton.wxss";
page {
  padding-top: 90rpx;
  padding-bottom: 170rpx;
}

/* start 头部搜索框 */

.search_btn_area {
  height: 90rpx;
  z-index: 100;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 0 35rpx;
  right: 0;
  padding-right: 190rpx;
  position: fixed;
  top: 0;
}

.search_btn_area .search_input {
  position: relative;
  height: 75rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  background-color: #f0f0f0;
  border-radius: 50rpx;
  padding: 0 30rpx;
  padding-left: 80rpx;
  padding-right: 80rpx;
  line-height: 75rpx;
  font-size: 30rpx;
}

.search_btn_area .search_input::before {
  content: "";
  position: absolute;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 50%;
  top: 50%;
  transform: translateY(-50%);
  left: 10rpx;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 95% 95%;
  background-color: #f0f0f0;
  background-image: url("data:image/png;base64,");
}

.search_btn_area .cancel_btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 45rpx;
  height: 53rpx;
  width: 53rpx;
  border-radius: 50%;
  text-align: center;
  background-color: #999696;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 90% 90%;
  background-image: url("data:image/png;base64,");
}

/* end 头部搜索框 */

.tab_box {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 32rpx;
  font-weight: Medium;
  font-family: PingFang-SC-Medium;
  height: 100rpx;
}

.check {
  border-bottom: 6rpx solid #de1512;
  color: #de1512;
}

.tab_box > view {
  width: 40%;
  height: 100%;
  line-height: 100rpx;
  color: #000;
  text-align: center;
}

.tab_box_detail {
  padding: 0 35rpx;
}

.tab_box_detail > view {
  width: 100%;
  margin-top: 34rpx;
  display: flex;
  justify-content: space-around;
}

.rel_checkbox {
  margin-top: 50rpx;
}

.left {
  width: 170rpx;
}

.left > image {
  width: 158rpx;
  height: 158rpx;
  margin: 0 auto;
}

.right {
  width: 73%;
  display: flex;
  justify-content: space-between;
}

.name {
  font-size: 30rpx;
  color: #323232;
  font-weight: Bold;
  font-family: PingFang-SC-Bold;
  margin-top: 20rpx;
}

.info {
  font-size: 28rpx;
  color: #7a7a7a;
  font-weight: Medium;
  font-family: PingFang-SC-Medium;
  margin-top: 10rpx;
}

.right image {
  width: 66rpx;
  height: 66rpx;
  margin-top: 50rpx;
}

/*  start 重写checkbox样式  */

/* 未选中的 背景样式 */

checkbox .wx-checkbox-input {
  border-radius: 50%;
  /* 圆角 */
  width: 46rpx;
  /* 背景的宽 */
  height: 46rpx;
  /* 背景的高 */
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  /* border: none; */
  border-color: #fff;
  background: #de1512;
}

/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  /* 圆角 */
  width: 46rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  height: 46rpx;
  /* 选中后对勾大小，不要超过背景的尺寸 */
  line-height: 40rpx;
  text-align: center;
  font-size: 35rpx;
  /* 对勾大小 30rpx */
  color: #fff;
  /* 对勾颜色 白色 */
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

/*  end 重写checkbox样式  */

.rel_bottom_btn {
  background-color: #fff;
  position: fixed;
  bottom: 0;
}
