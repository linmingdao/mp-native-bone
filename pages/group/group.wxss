.fix_top {
  width: 100%;
}

/* start 关系头部按钮组 */

.group_entry {
  display: flex;
  justify-content: space-around;
  margin: 0 35rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e9e9e9;
}

.group_entry .entry {
  position: relative;
  width: 100rpx;
  height: 170rpx;
}

.group_entry .entry .corner_mark {
  position: absolute;
  right: -25rpx;
  top: 10rpx;
  padding: 0 5rpx;
  height: 32rpx;
  background-color: #de1512;
  color: #fff;
  border-radius: 30rpx;
  line-height: 32rpx;
  font-size: 19rpx;
  text-align: center;
  min-width: 40rpx;
}

.group_entry .entry image {
  width: 100rpx;
  height: 100rpx;
  object-fit: cover;
}

.group_entry .entry view {
  font-size: 25rpx;
  text-align: center;
}

/* start 关系头部按钮组 */

.tab {
  height: 100rpx;
}

.container {
  padding: 0 35rpx;
  margin-top: 290rpx;
  background-color: #fff;
}

/* start 栏目编辑按钮 */

.column_bottom_operator_box {
  display: flex;
  justify-content: center;
  align-content: center;
}

.btn {
  display: inline-block;
  height: 60rpx;
  width: 60rpx;
  background-position: center center;
  background-repeat: no-repeat;
  border-radius: 50%;
  margin: 10rpx;
}

/* end 栏目编辑按钮 */

/* start 悬浮按钮 */

.suspend_btn {
  display: inline-block;
  opacity: 0.7;
  width: 74rpx;
  height: 74rpx;
  z-index: 100;
  background-size: 100%;
  background-position: center center;
  background-repeat: no-repeat;
  position: fixed;
  right: 1rpx;
  top: 45%;
  border-radius: 50%;
  background-color: #de1512;
  background-size: 75%;
}

.suspend_hover_btn {
  opacity: 1;
}

/* end 悬浮按钮 */

.accordion_item .title .susp-operator {
  display: flex;
  position: absolute;
  right: 16rpx;
  top: 0;
  height: 90rpx;
}

.accordion_item .title .susp-operator .susp-btn {
  display: inline-block;
  width: 70rpx;
  height: 90rpx;
  background-size: 45rpx 45rpx;
  background-position: center center;
  background-repeat: no-repeat;
}

