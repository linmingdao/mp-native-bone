page {
  padding-top: 100rpx;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  height: 100rpx;
  background-color: #fff;
  display: inline-block;
  width: 100%;
  padding-right: 100rpx;
  box-sizing: border-box;
}

.header.no-pub-btn {
  padding-right: 0;
}

/* start 头部发布按钮 */

.pub_btn_box {
  box-sizing: border-box;
  position: absolute;
  width: 100rpx;
  height: 100%;
  right: 0;
  top: 0;
  padding: 20rpx 0;
}

.pub_btn_box .pub_btn_inner_box {
  position: relative;
  width: 100%;
  height: 100%;
  border-left: 1rpx solid #e9e9e9;
}

.pub_btn_box .pub_btn_inner_box .pub_btn {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-size: 60% 60%;
  background-color: #df0a0a;
  border-radius: 50%;
}

/* end 头部发布按钮 */

.container {
  margin-top: -100rpx;
  height: 100%;
}

.events_box {
  background: #fff;
}

.dynamic_box {
  background-color: #f1f1f1;
}

/* start 轮播图 */

.swiper_box {
  padding: 35rpx;
}

swiper {
  height: 436rpx;
  border-radius: 6rpx;
}

swiper-item {
  border-radius: 6rpx;
}

swiper-item image {
  border-radius: 6rpx;
  width: 100%;
  height: 100%;
}

/* end 轮播图 */
