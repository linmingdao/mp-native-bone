.my-pub-button {
    top: 50%;
    transform: translateY(-50%);
    left: 0;
    padding: 20rpx;
    padding-left: 50rpx;
    height: 35rpx;
    background: #fff;
    text-align: center;
    position: fixed;
    font-size: 25rpx;
    z-index: 100;
    border-top-right-radius: 30rpx;
    border-bottom-right-radius: 30rpx;
    box-shadow: 0px 0px 5px #0000008e;
    color: #f35b5b;
    border: 1rpx solid #a1a1a1;
    border-left-width: 0;
}

.my-pub-button::before {
    content: "";
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 20rpx;
    left: 10rpx;
    background-image: url("data:image/png;base64,");
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 100%;
}

.container {
    height: 100%;
}

.header {
    text-align: right;
    font-size: 34rpx;
    font-weight: bold;
    color: #323232;
    margin-right: 55rpx;
    height: 70rpx;
    line-height: 70rpx;
}

.center {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
}

.center view {
    width: 33.333%;
    display: flex;
    flex-direction: column;
}

.center view image {
    width: 110rpx;
    height: 110rpx;
    margin: 24rpx auto;
}

.center view text {
    text-align: center;
    font-size: 30rpx;
    font-weight: Medium;
    color: #323232;
    margin-bottom: 34rpx;
}