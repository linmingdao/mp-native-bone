@import "/assets/css/icons.wxss";
@import "/assets/css/bottomFixedLayout.wxss";

.container {
  padding: 0 35rpx;
  height: 100%;
}

/* .vote_item {
  margin-bottom: 10rpx; 
} */

.add_vote_item_btn {
  height: 95rpx;
  border-radius: 15rpx;
  background-color: #bbbbbb;
  margin:30rpx 0;
  background-size: 50rpx 50rpx;
}

.vote_order {
  display: inline-block;
  width: 90rpx;
  height: 45rpx;
  line-height: 45rpx;
  text-align: center;
  color: #fff;
  background-color: #1165e4;
  border-top-left-radius: 2rpx;
  border-bottom-left-radius: 2rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.title {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom:1rpx solid #e9e9e9;
}

.content {
  height: 120rpx;
  padding: 10rpx 0;
  width: 100%;
  border-bottom:1rpx solid #e9e9e9;
}

/* start 选项 */

.option_item {
  position: relative;
  padding-left: 61rpx;
  height: 120rpx;
  border-bottom:1rpx solid #e9e9e9;
}

.option_item .delete_opt_btn {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  display: inline-block;
  height: 61rpx;
  width: 61rpx;
  background-color: #DE1512;
  border-radius: 50%;
  background-size: 35rpx;
}

.option_item .option_content {
  height: 100%;
  line-height: 120rpx;
  padding: 0 20rpx;
}

/* end 选项 */

/* start 添加选项 */

.add_option {
  position: relative;
  padding-left: 81rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #bbbbbb;
}

.add_option .add_opt_btn {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  display: inline-block;
  height: 61rpx;
  width: 61rpx;
  background-color: #bbbbbb;
  border-radius: 50%;
  background-size: 35rpx;
}

/* end 添加选项 */

.vote_setting {
  position: relative;
  padding-left: 160rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #2c2c2c;
  border-bottom:1rpx solid #e9e9e9;
}

.vote_setting.type {
  border-width: 0;
}

.vote_setting .vote_setting_desc {
  position: absolute;
  left: 0;
  top: 0;
  line-height: 120rpx;
  height: 120rpx;
  width: 160rpx;
}

.type_radio_group, .anony_switch, .date_picker, .time_picker {
  float: right;
}

.time_picker{
  margin-left:20rpx;
}