page {
    height: 100%;
}

.message_list {
    padding: 0 30rpx;
}

.message_list .message_item {
    margin: 30rpx 0;
    font-size: 30rpx;
    color: #4d4d4d;
    text-align: justify;
    text-justify: inter-ideograph;
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 1rpx 3rpx 10rpx 0rpx #c4c4c4;
}

.message_list .message_item .title-box {
    display: flex;
    background-color: #f7f7f7;
    font-size: 28rpx;
}

.message_list .message_item .title-box .title {
    position: relative;
    flex-grow: 1;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 10rpx;
    padding-left: 70rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.message_list .message_item .title-box .status {
    position: relative;
    width: 135rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #afafaf;
}

.message_list .message_item .title-box .status.unaudited {
    color: #6568f8;
}

.message_list .message_item .title-box .status::after {
    position: absolute;
    content: '';
    display: inline-block;
    right: 0;
    top: 0;
    height: 70rpx;
    width: 70rpx;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 35rpx;
}

.message_list .message_item .title-box .status.audited::after {
    background-image: url('data:image/png;base64,');
}

.message_list .message_item .title-box .status.rejected::after {
    background-image: url('data:image/png;base64,');
}

.message_list .message_item .title-box .status.unaudited::after {
    background-size: 22rpx;
    background-image: url('data:image/png;base64,');
}

.message_list .message_item .title-box .title::before {
    position: absolute;
    content: '';
    display: inline-block;
    left: 0;
    top: 0;
    height: 70rpx;
    width: 70rpx;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 32rpx;
    background-image: url('data:image/png;base64,');
}

.message_list .message_item .content {
    min-height: 90rpx;
    background-color: #fff;
    font-weight: bolder;
    padding: 20rpx;
}

.message_list .message_item .date {
    position: relative;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 26rpx;
    color: #bdbdbd;
    padding: 0 10rpx;
    padding-left: 70rpx;
    border-top: 1rpx solid #f7f7f7;
}

.message_list .message_item .date::before {
    position: absolute;
    content: '';
    display: inline-block;
    left: 0;
    top: 0;
    height: 50rpx;
    width: 70rpx;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 26rpx;
    background-image: url('data:image/png;base64,');
}