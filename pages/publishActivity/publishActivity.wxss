@import "/assets/css/bottomFixedLayout.wxss";
.container {
    padding: 0 35rpx;
}


/* start 上传的附件列表 */

.uploader {
    width: 100%;
}

.uploader>view:first-child {
    width: 100%;
    position: relative;
    height: 208rpx;
}

.uploader>view:first-child image {
    width: 208rpx;
    height: 208rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}

.uploader>view:last-child {
    margin: 22rpx auto;
    color: #979CAF;
    font-size: 26rpx;
    font-weight: Medium;
    width: 100%;
    text-align: center;
}


/* end 上传的附件列表 */

.infolist .row {
    display: flex;
    height: 70rpx;
    border-bottom: 1rpx #EEEEEE solid;
    color: #323232;
    font-size: 30rpx;
}

.infolist .row.multi {
    height: 200rpx;
}

.infolist .row .title {
    flex: 0 0 260rpx;
    height: 70rpx;
    line-height: 70rpx;
}

.infolist .row input {
    height: 70rpx;
    width: 100%;
    line-height: 70rpx;
}

.infolist .row textarea {
    height: 100%;
}


/* 标签样式 */

.tag-title {
    display: inline-block;
    color: #323232;
    margin-top: 10rpx;
    padding: 20rpx 0;
    font-size: 30rpx;
}

.tag-list {
    display: flex;
    flex-wrap: wrap;
}

.tag-list .tag-item {
    font-size: 30rpx;
    display: inline-block;
    padding: 10rpx;
    margin: 10rpx;
    border-radius: 10px;
    background-color: #ebebeb;
    color: #aaaaaa;
}