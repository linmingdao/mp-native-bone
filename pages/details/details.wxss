/* 九宫格 */

@import "/assets/css/sudoku.wxss";
@import "/assets/css/weibo_post.wxss";
@import "/assets/css/icons.wxss";
.container {
    padding: 0 35rpx;
}

.title {
    /* 标题文字换行显示 */
    /* height: 100rpx;
    line-height: 100rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap; */
    font-size: 35rpx;
    font-weight: bold;
    color: #1a1919;
}

.time {
    height: 50rpx;
    line-height: 50rpx;
    font-size: 31rpx;
    color: #aca9a9;
    display: flex;
    justify-content: space-between;
    margin: 30rpx 0;
}

.article {
    border-top: 1rpx solid #eceeee;
    font-size: 30rpx;
    color: #4b4b4b;
    margin-bottom: 35rpx;
    padding-top: 35rpx;
}

.sudoku {
    margin-bottom: 35rpx;
}

.article image {
    display: inline-block !important;
    width: 100% !important;
}

.article .WxEmojiView.wxParse-inline {
    display: block;
    text-indent: 60rpx;
}


/* 底部按钮 */

.footer {
    justify-content: flex-end;
    display: flex;
    width: 100%;
    height: 60rpx;
    border-top: 1rpx solid #e9e9eb;
    padding-top: 20rpx;
}

.footer .opt_item {
    height: 100%;
    width: 60rpx;
    background-position: center center;
    background-repeat: no-repeat;
}

.comment-btn {
    color: #de1512;
    margin-left: 30rpx;
    /* border: 1rpx solid #de1512; */
    /* border-radius: 8rpx; */
    padding: 4rpx 10rpx;
}

.comment-item {
    padding: 30rpx 0;
    display: flex;
    border-bottom: 1rpx solid #d4d4d4;
}

.comment-item:last-child {
    border-width: 0;
}

.comment-item .avatar-area {
    width: 100rpx;
    height: 100rpx;
}

.comment-item .avatar-area image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}

.comment-item .content-area {
    flex: 1;
}

.comment-item .content-area .nickname-area {
    display: flex;
    justify-content: space-between;
}

.comment-item .content-area .nickname-area .name {
    color: #a5a5a5;
}

.comment-item .content-area .nickname-area .delete-comment-btn {
    color: #de1512;
    height: 50rpx;
    width: 50rpx;
    /* background-color: teal; */
    text-align: center;
    line-height: 50rpx;
}

.comment-item .content-area .date {
    color: #c5c5c5;
    font-size: 24rpx;
}


/* 模态对话框 */

.mask_layer {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 999;
    left: 0;
    top: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    pointer-events: none;
}

.modal_box {
    width: 86%;
    overflow: hidden;
    position: fixed;
    top: 200rpx;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1001;
    background: #fafafa;
    border-radius: 3px;
}

.content {
    padding: 40rpx 20rpx;
}

.modal_box .title {
    text-align: center;
    padding: 20rpx 0;
}

.comment-input {
    width: 100%;
    font-size: 32rpx;
    text-align: center;
}

.btn-area {
    margin-top: 20rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    background-color: white;
}

.cancel-btn {
    width: 100%;
    padding: 10px;
    text-align: center;
    color: black;
}

.sure-btn {
    width: 100%;
    padding: 10px;
    color: #de1512;
    background-color: white;
    border-left: 1rpx solid #d0d0d0;
    text-align: center;
}