<!-- 团队成员列表 -->
<!-- <view class="{{rowClass}}"> -->
<view class="{{rowClass}}">
  <view class="avatar-item" bind:tap="go2MemberInfo" wx:for="{{members}}" wx:for-index="index" wx:for-item="item" wx:key="item._id">
    <view class="avatar {{roleClassMap[item.role]}}">
      <image class="avatar-image" data-mid="{{item._id}}" src="{{item.avatar_url}}"></image>
      <view class="delete" wx:if="{{isTeamOwner && index !== 0 && canDeleteMember}}" catchtap="deleteMember" data-index="{{index}}" data-mid="{{item._id}}"></view>
      <text class="avatar-name">{{item.name || item.nickname}}</text>
    </view>
  </view>
  <view class="avatar-item" wx:if="{{isTeamOwner}}">
    <view class="avatar">
      <view class="avatar-image delete-switch" bindtap="toggleCanDeleteMember"></view>
    </view>
  </view>
</view>
<!-- 查看更多团队成员按钮 -->
<view class="more-team-member bottom-division" wx:if="{{isShowMoreTeamMemberButton}}">
  <text bind:tap="moreTeamMember">查看更多团队成员 ></text>
</view>
<!-- 待审核的成员列表 -->
<view class="top-division" wx:if="{{role === 'admin' && membersUnAudit.length}}">
  <mp-cells title="待审核(左滑以接受或拒绝申请)">
    <mp-slideview buttons="{{[{ text: '接受', data: { mid: item.mid._id } }, { type: 'warn', text: '拒绝', data: { mid: item.mid._id } }]}}" bindbuttontap="slideButtonTap" wx:for="{{membersUnAudit}}" wx:for-index="index" wx:for-item="item" wx:key="item._id">
      <mp-cell value="{{item.mid.name || item.mid.nickname}}" footer="请求加入团队">
        <image class="un-audit-avatar" slot="icon" src="{{item.mid.avatar_url}}"></image>
      </mp-cell>
    </mp-slideview>
  </mp-cells>
</view>
<!-- 团队信息列表 -->
<view class="top-division">
  <mp-cells title="团队基本信息">
    <!-- <mp-cell value="{{teamName}}">
      <image class="cell-icon" slot="icon" src="/assets/images/teamName.png"></image>
    </mp-cell> -->
    <mp-cell link hover url="../teamQrCode/teamQrCode" value="团队二维码">
      <image class="cell-icon" slot="icon" src="/assets/images/qrcode.png"></image>
    </mp-cell>
    <mp-cell link hover url="../teamInfo/teamInfo" value="团队信息">
      <image class="cell-icon" slot="icon" src="/assets/images/edit.png"></image>
    </mp-cell>
  </mp-cells>
</view>
<!-- 退出按钮，团队 【创建者】 和 【游客】 无退出团队功能 -->
<view class="top-division" wx:if="{{!isTeamOwner && role !== 'visitor'}}">
  <mp-cells>
    <mp-cell hover ext-class="center-text" value="退出团队" bindtap="quit"></mp-cell>
  </mp-cells>
</view>