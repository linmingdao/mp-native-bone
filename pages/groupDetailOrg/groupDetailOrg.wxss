.container {
  padding: 0 35rpx;
}

.p-detail {
  width: 100%;
}

.p-detail>image {
  margin: 0 auto;
  display: block;
  width: 228rpx;
  height: 266rpx;

}

.p-name {
  margin: 20rpx 0;
  text-align: center;
  color: #323232;
  font-weight: bold;
  font-size: 30rpx;
}

.p-table {
  color: #7A7A7A;
  width: 50%;
  height: auto;
  margin: 18rpx auto;
  font-size: 24rpx;
}

.p-table .top {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.p-table .top>view {
  height: 100%;
}

.p-table .down {
  width: 100%;
  height: 100%;
  flex-direction: row;
  justify-content: space-between;
}

.p-table .down>view {
  width: 250rpx;
  height: 100%;
  float: left;
}

.p-resume {
  width: 100%;
}

.p-resume .p-text {
  width: 100%;
  height: 285rpx;
  padding: 30rpx 0;
  border-bottom: 1px solid #e9e5e5;
}

.p-text .title {
  width: 100%;
  text-align: left;
  font-family: PingFang-SC-Bold;
  font-size: 32rpx;
  font-weight: bold;
  color: #323232;
}

.p-text .article {
  width: 100%;
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  font-weight: Medium;
  line-height: 40rpx;
  height: 100%;
  margin-top: 20rpx;
  text-indent: 40rpx;
}