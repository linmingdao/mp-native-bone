<view class="header">
  <view class="account_bg"></view>
  <view class="user_info_area">
    <view class="avatar_box">
      <image class="avatar" src="{{avatarUrl}}" bind:tap="go2MemberInfo" />
    </view>
    <view class="info_box">
      <view class="user_name_txt">{{userName}}</view>
    </view>
    <view class="qr_code_box">
      <view class="more_team" bind:tap="goTo" data-destination="moreTeam">
        <view class="icon">
          <image src='/assets/images/more_team.png' />
        </view>
        <view class="txt">更多团队</view>
      </view>
      <view class="team_qr" bind:tap="goTo" data-destination="teamQrCode">
        <view class="icon">
          <image src='/assets/images/2code.png' />
        </view>
        <view class="txt">团队二维码</view>
      </view>
    </view>
  </view>
</view>
