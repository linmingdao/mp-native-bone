page {
    background-color: #fff;
}

.header {
    position: relative;
    height: 500rpx;
    background-color: #fff;
}

.account_bg {
    height: 300rpx;
    background-color: #DE1512;
    border-bottom-left-radius: 8%;
    border-bottom-right-radius: 8%;
}

.user_info_area {
    position: absolute;
    width: 90%;
    top: 40rpx;
    left: 50%;
    transform: translateX(-50%);
    height: 420rpx;
    background-color: #fff;
    border-radius: 24rpx;
    box-shadow: 0rpx 5rpx 10rpx 1rpx RGBA(222, 21, 18, 0.2);
}

.user_info_area>view.avatar_box {
    position: relative;
    height: 200rpx;
}

.user_info_area>view.avatar_box .avatar {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    display: inline-block;
    border-radius: 50%;
    height: 160rpx;
    width: 160rpx;
}

.user_info_area>view.info_box {
    text-align: center;
    height: 60rpx;
}

.user_info_area>view.info_box view {
    height: 60rpx;
    line-height: 60rpx;
}

.user_info_area>view.info_box .user_name_txt {
    font-size: 35rpx;
    letter-spacing: 3rpx;
    font-weight: bold;
    color: #242323;
}

.user_info_area>view.info_box .team_name_txt .star_icon {
    display: inline-block;
    width: 24rpx;
    height: 24rpx;
}

.user_info_area>view.info_box .team_name_txt {
    letter-spacing: 3rpx;
    font-size: 30rpx;
    color: #afafaf;
}

.user_info_area>view.qr_code_box {
    overflow: hidden;
    height: 160rpx;
}

.user_info_area>view.qr_code_box>view {
    display: inline-block;
    box-sizing: border-box;
    padding: 40rpx 0;
    width: 50%;
    height: 100%;
}

.user_info_area>view.qr_code_box .more_team .icon,
.user_info_area>view.qr_code_box .team_qr .icon {
    overflow: hidden;
    text-align: center;
    height: 40rpx;
    width: 100%;
}

.user_info_area>view.qr_code_box .more_team .icon,
.user_info_area>view.qr_code_box .more_team .txt {
    border-right: 1rpx solid #eeeeee;
}

.user_info_area>view.qr_code_box .more_team .icon image,
.user_info_area>view.qr_code_box .team_qr .icon image {
    display: inline-block;
    height: 40rpx;
    width: 40rpx;
}

.user_info_area>view.qr_code_box .more_team .txt,
.user_info_area>view.qr_code_box .team_qr .txt {
    text-align: center;
    height: 40rpx;
    line-height: 40rpx;
    width: 100%;
    font-size: 30rpx;
    color: #afafaf;
}

.admin-switch-wrapper {
    padding: 16rpx 0;
    background-color: #f1f1f1;
}

.admin-switch-wrapper .admin-switch {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 26rpx 35rpx;
    font-size: 28rpx;
    color: #242323;
    background-color: #ffffff;
}

.message_box {
    padding: 0 35rpx;
}

.message_box .message_title {
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #eeeeee;
}

.message_box .message_title .my_msg_txt {
    font-size: 35rpx;
    letter-spacing: 3rpx;
    font-weight: bold;
    color: #242323;
}

.message_box .message_title .all_msg_txt {
    letter-spacing: 3rpx;
    font-size: 30rpx;
    color: #afafaf;
    float: right;
}

.message_box .message_list .message_item {
    margin: 30rpx 0;
    font-size: 30rpx;
    color: #4d4d4d;
    text-align: justify;
    text-justify: inter-ideograph;
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 1rpx 3rpx 10rpx 0rpx #c4c4c4;
}

.message_box .message_list .message_item .title-box {
    display: flex;
    background-color: #f7f7f7;
    font-size: 28rpx;
}

.message_box .message_list .message_item .title-box .title {
    position: relative;
    flex-grow: 1;
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 10rpx;
    padding-left: 70rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.message_box .message_list .message_item .title-box .status {
    position: relative;
    width: 135rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #afafaf;
}

.message_box .message_list .message_item .title-box .status.unaudited {
    color: #6568f8;
}

.message_box .message_list .message_item .title-box .status::after {
    position: absolute;
    content: '';
    display: inline-block;
    right: 0;
    top: 0;
    height: 70rpx;
    width: 70rpx;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 35rpx;
}

.message_box .message_list .message_item .title-box .status.audited::after {
    background-image: url('data:image/png;base64,');
}

.message_box .message_list .message_item .title-box .status.rejected::after {
    background-image: url('data:image/png;base64,');
}

.message_box .message_list .message_item .title-box .status.unaudited::after {
    background-size: 22rpx;
    background-image: url('data:image/png;base64,');
}

.message_box .message_list .message_item .title-box .title::before {
    position: absolute;
    content: '';
    display: inline-block;
    left: 0;
    top: 0;
    height: 70rpx;
    width: 70rpx;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 32rpx;
    background-image: url('data:image/png;base64,');
}

.message_box .message_list .message_item .content {
    min-height: 90rpx;
    background-color: #fff;
    font-weight: bolder;
    padding: 20rpx;
}

.message_box .message_list .message_item .date {
    position: relative;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 26rpx;
    color: #bdbdbd;
    padding: 0 10rpx;
    padding-left: 70rpx;
    border-top: 1rpx solid #f7f7f7;
}

.message_box .message_list .message_item .date::before {
    position: absolute;
    content: '';
    display: inline-block;
    left: 0;
    top: 0;
    height: 50rpx;
    width: 70rpx;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 26rpx;
    background-image: url('data:image/png;base64,');
}