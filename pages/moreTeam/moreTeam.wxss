@import "/assets/css/page.wxss";
.container {
  padding: 0 35rpx;
  padding-top: 90rpx;
  background-color: #fff;
}

.search_btn_area {
  height: 90rpx;
  z-index: 100;
  background-color: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 0 35rpx;
  right: 0;
  padding-right: 190rpx;
}

.search_btn_area .search_input {
  position: relative;
  height: 75rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  background-color: #f0f0f0;
  border-radius: 50rpx;
  padding: 0 30rpx;
  padding-left: 80rpx;
  padding-right: 80rpx;
  line-height: 75rpx;
  font-size: 30rpx;
}

.search_btn_area .search_input::before {
  content: "";
  position: absolute;
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  top: 50%;
  transform: translateY(-50%);
  left: 10rpx;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 95% 95%;
  background-color: #f0f0f0;
  background-image: url("data:image/png;base64,");
}

.search_btn_area .cancel_btn {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 45rpx;
  height: 53rpx;
  width: 53rpx;
  border-radius: 50%;
  text-align: center;
  background-color: #999696;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 90% 90%;
  background-image: url("data:image/png;base64,");
}

/* start tab样式 */

.tab {
  z-index: 100;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.fix_top {
  position: fixed;
  top: 0;
}

.tab.trisect > view {
  width: 50%;
}

.tab > view {
  width: 25%;
  height: 100rpx;
  font-size: 35rpx;
  float: left;
  line-height: 100rpx;
  text-align: center;
}

.tab > view.check {
  border-bottom: 6rpx solid #de1512;
  color: #de1512;
}

/* end tab样式 */

/* start 关注的、加入的列表 */

.tab_box_detail > view {
  width: 100%;
  margin-top: 34rpx;
  display: flex;
  justify-content: space-around;
}

.left {
  width: 170rpx;
  height: 100%;
}

.left > image {
  width: 158rpx;
  height: 158rpx;
  margin: 0 auto;
}

.right {
  width: 73%;
  height: 100%;
  display: flex;
  justify-content: space-between;
}

.name {
  font-size: 30rpx;
  color: #323232;
  font-weight: Bold;
  font-family: PingFang-SC-Bold;
  margin-top: 20rpx;
}

.info {
  font-size: 28rpx;
  color: #7a7a7a;
  font-weight: Medium;
  font-family: PingFang-SC-Medium;
  margin-top: 10rpx;
}

.right image {
  width: 66rpx;
  height: 66rpx;
  margin-top: 50rpx;
}

/* end 关注的、加入的列表 */
