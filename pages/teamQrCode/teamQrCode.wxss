@import "/assets/css/tbutton.wxss";
.qr_code_box {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.qr_code_txt {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.qr_code_img {
  width: 600rpx;
  height: 600rpx;
}

.qr_code_img image {
  display: inline-block;
  /* border: 1rpx solid #c2c2c2; */
  border-radius: 4rpx;
  width: 100%;
  height: 100%;
}

.save_btn {
  background-color: #fff;
  position: fixed;
  bottom: 0;
}
