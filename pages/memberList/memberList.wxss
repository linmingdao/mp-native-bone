@import "/components/weui/weui-wxss/weui.wxss";
@import "/assets/css/common.wxss";
.avatar-item {
    position: relative;
    box-sizing: border-box;
    width: 20%;
    padding-bottom: 20%;
    float: left;
    /* overflow: hidden; */
    height: 0;
}

.avatar-item .avatar {
    /* overflow: hidden; */
    box-sizing: border-box;
    position: absolute;
    background-color: #fff;
    border: 20rpx solid #fff;
    width: 100%;
    height: 100%;
}

.avatar-item .avatar .delete {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
    right: -10rpx;
    top: -10rpx;
    border-radius: 50%;
    background-color: #c73232;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 50% 50%;
    background-image: url("data:image/png;base64,");
}

.avatar-item .avatar.creator::before,
.avatar-item .avatar.admin::before {
    content: "";
    position: absolute;
    width: 45rpx;
    height: 45rpx;
    display: inline-block;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    border-top-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    background-color: rgba(0, 0, 0, 0.4);
}

.avatar-item .avatar.creator::before {
    background-size: 70% 70%;
    background-image: url("data:image/png;base64,");
}

.avatar-item .avatar.admin::before {
    background-size: 70% 70%;
    background-image: url("data:image/png;base64,");
}

.avatar-item .avatar .avatar-image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.avatar-item .avatar .avatar-image.delete-switch {
    background-color: #e7e7e7;
    background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAACAAAAAgCAYAAABzenr0AAAAUklEQVRYR+3VMQ3AMAxE0W88AVAMId4tW/k4yhIK1+GbwJ2eZbkIT4XzsYACCiiggALV3RN4Qk/pPQU+YIQKrF8UyK4gRH9jPUMFFFBAAQXiAhvZhxI5tjbrgwAAAABJRU5ErkJggg==");
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 50% 50%;
}

.avatar-item .avatar .avatar-name {
    position: absolute;
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 20rpx;
    bottom: 0;
    left: 0;
    z-index: 1;
    text-align: center;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.4);
    border-bottom-right-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}