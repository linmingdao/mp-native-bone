/* 实心的顶部发布按钮 */

.top_button_box {
    height: 150rpx;
    position: relative;
}

.solid_button {
    background-color: #DE1512;
    color: #fff;
    width: 120rpx;
    height: 60rpx;
    font-size: 35rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 10rpx;
}

.fr {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
}

.fl {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
}


/* 镂空的按钮 */

.pierced_button {
    width: 130rpx;
    height: 66rpx;
    line-height: 66rpx;
    border-radius: 35rpx;
    background-color: #fff;
    border: 1rpx solid #df2c29;
    color: #df2c29;
    display: inline-block;
    font-size: 25rpx;
}


/* 实心的底部提交按钮 */

.bottom_btn_box {
    width: 100%;
    height: 170rpx;
    position: relative;
}

.bottom_btn {
    width: 95%;
    height: 100rpx;
    background-color: #DE1512;
    color: #FFFFFF;
    font-size: 36rpx;
    border-radius: 20rpx;
    line-height: 100rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}