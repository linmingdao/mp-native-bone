/* 手风琴列表 */

.accordion_box {
    width: 100%;
    background-color: #fff;
}

.accordion_item {
    width: 100%;
    margin-bottom: 35rpx;
}

.accordion_item .title {
    padding-left: 25rpx;
    position: relative;
    background-color: #EEEEEE;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 5px;
}

.accordion_item.arrow .title::after {
    position: absolute;
    right: 0;
    top: 0;
    content: '';
    width: 90rpx;
    height: 90rpx;
    background: url("data:image/png;base64,") no-repeat center center;
    background-size: 60%;
}

.accordion_item.arrow .title.pulldown::after {
    transform: rotate(180deg);
    transition: transform .5s linear;
}